<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.newcode.stream">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kotflix"
        tools:targetApi="31">

        <!-- Declaración de MainActivity -->
        <activity
            android:name="com.newcode.stream.MainActivity"
            android:exported="true"
            android:theme="@style/KotflixApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Declaración de PlaymovieActivity -->
        <activity
            android:name=".PlaymovieActivity"
            android:theme="@style/KotflixApp" />
    </application>

</manifest>
